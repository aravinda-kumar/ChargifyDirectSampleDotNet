@{
    ViewBag.Title = "Sync Call";
}

@section head {
    <style type="text/css">
        .string {
            color: green;
        }

        .number {
            color: darkorange;
        }

        .boolean {
            color: blue;
        }

        .null {
            color: magenta;
        }

        .key {
            color: red;
        }
    </style>
}

<h2>Call (Read Sync)</h2>

<div id="resultDiv">
    <pre id="result">
    </pre>
</div>

<p><small><a href="@Url.Action("ShowAsync", "Call", new { id = ViewContext.RouteData.Values["id"]})">View raw call information (async)</a></small></p>

@section scripts {
    <script type="text/javascript">
        function syntaxHighlight(json) {
            if (typeof json != 'string') {
                json = JSON.stringify(json, undefined, 2);
            }
            json = json.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
            return json.replace(/("(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g, function (match) {
                var cls = 'number';
                if (/^"/.test(match)) {
                    if (/:$/.test(match)) {
                        cls = 'key';
                    } else {
                        cls = 'string';
                    }
                } else if (/true|false/.test(match)) {
                    cls = 'boolean';
                } else if (/null/.test(match)) {
                    cls = 'null';
                }
                return '<span class="' + cls + '">' + match + '</span>';
            });
        }
    </script>
    @if (ViewBag.Result != null)
    {
        <script type="text/javascript">
            var json = '@Html.Raw(Html.Encode(ViewBag.Result))';
            $("#result").html(syntaxHighlight(JSON.parse(json)));
        </script>
    }
}