@model Chargify2.Model.Call

@{
    ViewBag.Title = "Receipt";
}

<h1>Receipt</h1>

<p>
    You just signed up for the @Model.response.signup.product.name Plan.
</p>
@if (Convert.ToInt32(decimal.Parse(Model.response.signup.subscription.signup_revenue)) == 0)
{
    <p>
        No payment was due for this sign up.
    </p>
}
else
{
    <p>
        You were charged $@Model.response.signup.subscription.signup_revenue to the card
        ending in @Model.response.signup.payment_profile.masked_card_number.
    </p>
}

<p><small><a href="@Url.Action("Show", "Call", new {id = Model.id})">View raw call information (sync)</a></small></p>
<p><small><a href="@Url.Action("ShowAsync", "Call", new {id = Model.id})">View raw call information (async)</a></small></p>